{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@pigfarm-core": [
        "projects/pigfarm-core/src/public-api.ts",
        "dist/pigfarm-core",
      ],
      "ngx-org-chart": [
        "projects/ngx-org-chart/*",
        "dist/ngx-org-chart/ngx-org-chart",
        "dist/ngx-org-chart"
      ],
      "ngx-org-chart/*": [
        "projects/ngx-org-chart/*",
        "dist/ngx-org-chart/*"
      ]
    
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "resolveJsonModule": true, //already there
    "allowSyntheticDefaultImports": true, // Add this line
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableIvy": true
  }
}
